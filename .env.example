# MCP Registry (Prisma + SQLite)
# Copy this file to .env and provide real values before running the server.

# Prisma connection string for the local registry database
DATABASE_URL="file:./registry.db"

# Passphrase used to derive the encryption key for stored database URLs
MCP_DB_PASSPHRASE=

# Optional defaults for connecting to external PostgreSQL instances through MCP
POSTGRES_HOST=localhost
POSTGRES_PORT=5432
POSTGRES_DB=postgres
POSTGRES_USER=postgres
POSTGRES_PASSWORD=
